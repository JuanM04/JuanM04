{
  "markdown.extension.katex.macros": {
    "\\unit": "\\ \\text{#1}"
  },
  "markdown.extension.toc.slugifyMode": "github",
  "markdown.extension.toc.downcaseLink": true,
  "markdown.extension.math.enabled": true,
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.suggest.paths.enabled": false,
  "markdown.extension.completion.root": "public",
  "markdown.preferredMdPathExtensionStyle": "removeExtension",
  "markdown.validate.fileLinks.enabled": "error",
  "markdown.validate.fileLinks.markdownFragmentLinks": "error",
  "markdown.validate.fragmentLinks.enabled": "error",
  "markdown.validate.referenceLinks.enabled": "error",

  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "conventionalCommits.scopes": ["bpm", "checksum", "docs", "qr"],
  "prettier.documentSelectors": ["**/*.astro"]
}
