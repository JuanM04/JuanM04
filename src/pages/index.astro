---
import { Icon } from "astro-icon"

import MainLayout from "~/layouts/MainLayout.astro"

const projects: {
  name: string
  description: string
  released: string
  stack: string[]
  url?: string
}[] = [
  {
    name: "Cuadrado",
    description: "An app to help you move around La Plata.",
    stack: ["React Native", "Expo", "PWA", "TypeScript"],
    released: "Early 2022",
    url: "https://cuadrado.com.ar",
  },
  {
    name: "pure-date-fns",
    description: "A package based on date-fns that works with string dates",
    stack: ["JavaScript", "NPM"],
    released: "Late 2021",
    url: "https://github.com/JuanM04/pure-date-fns",
  },
  {
    name: "Literatura 2021",
    description: "A website with essays and memes",
    stack: ["Astro", "Tailwind"],
    released: "Mid 2021",
    url: "https://github.com/JuanM04/literatura-2021",
  },
  {
    name: "Martín Seery",
    description: "A redesign for a factory",
    stack: ["Next.js", "Nodemailer", "TailwindCSS", "Typescript / Zod", "React Hook Form"],
    released: "Mid 2021",
    url: "https://seery.com.ar",
  },
  {
    name: "Kana",
    description: "A simple website to learn hiragana and katakana",
    stack: ["Svelte", "Tailwind", "Snowpack", "Very basic japanese"],
    released: "Early 2021",
    url: "https://github.com/JuanM04/kana",
  },
  {
    name: "Hidro Industrial",
    description: "A website for a factory",
    stack: ["Next.js", "SASS", "Figma", "Google Sheets (auto-update)", "Mapbox"],
    released: "Mid 2020",
    url: "https://hidroindustrial.com.ar",
  },
  {
    name: "The Cloc",
    description: "An alarm clock that doesn't show the time",
    stack: ["Raspberry Pi", "Electronics", "Python", "Next.js", "HackClub"],
    released: "Mid 2020",
    url: "/docs/the-cloc/",
  },
  {
    name: "Seery Facturas",
    description: "A billing program connected with AFIP (argentine IRS)",
    stack: [
      "Next.js",
      "tRPC",
      "Prisma",
      "Postgres",
      "Docker",
      "AFIP WS",
      "Railway",
      "TailwindCSS",
      "Zod",
      "PDF Generation",
    ],
    released: "Mid 2020",
  },
  {
    name: "Organit",
    description: "The definitive tool for students",
    stack: [
      "Flutter",
      "Firebase (Auth, Firestore, Storage, Functions)",
      "Push Notifications",
      "Google AdMob",
      "Sentry",
      "Web App with Firestore",
    ],
    released: "Early 2020",
    url: "https://organit.juanm04.com",
  },
  {
    name: "Cartas Negras",
    description: "Cards Against Humanity as an app (and argentine)",
    stack: ["Flutter", "Firebase (Auth & Firestore)"],
    released: "Late 2019",
    url: "https://play.google.com/store/apps/details?id=com.juanm04.cartas_negras",
  },
  {
    name: "Animú",
    description: "Android app to watch anime",
    stack: ["Flutter", "Vercel", "Web Scrapping"],
    released: "Late 2019",
    url: "https://animu.juanm04.com",
  },
  {
    name: "PaseTec",
    description: "An electronic system of scholar transport",
    stack: ["Next.js (PWA)", "Vercel", "GraphQL", "MySQL (Prisma)", "Arduino"],
    released: "Mid 2019",
    url: "https://pasetec.juanm04.com",
  },
  {
    name: "Veritas (v2)",
    description: "Group scholar schedule",
    stack: ["Next.js", "Vercel", "PWA with Offline support", "MySQL (Prisma)"],
    released: "Mid 2019",
    url: "https://github.com/JuanM04/veritas-pwa",
  },
  {
    name: "WatchWith",
    description: "Watch media from Youtube, Twitch, Facebook, direct files and more synchronously",
    stack: ["Next.js", "Vercel", "Pusher"],
    released: "Early 2019",
    url: "https://github.com/JuanM04/watch-with",
  },
  {
    name: "Bees: the game",
    description: "Quiz-game about bees",
    stack: ["React", "Electron"],
    released: "Late 2018",
    url: "https://github.com/JuanM04/bees-thegame",
  },
]
---

<MainLayout title="Juan Martín Seery" description="Developer, open-source enthusiast. 🇦🇷🧉">
  <header class="flex items-start justify-between my-20">
    <div>
      <h1 class="text-4xl font-black text-display">Juan Martín Seery</h1>
      <p>Developer, open-source enthusiast. 🇦🇷🧉</p>
      <p>Currently studying at <a href="https://unlp.edu.ar/" class="underline decoration-red-500">UNLP</a>.</p>
      <ul class="mt-8 space-y-2">
        <li>
          <a
            href="mailto:me@juanm04.com"
            class="flex items-center gap-2 underline decoration-red-500"
          >
            <Icon name="mi:email" class="w-5 h-5" />Email
          </a>
        </li>
        <li>
          <a
            href="https://github.com/JuanM04"
            target="_blank"
            class="flex items-center gap-2 underline decoration-red-500"
          >
            <Icon name="line-md:github" class="w-5 h-5" />GitHub
          </a>
        </li>
      </ul>
    </div>

    <img src="/images/me.jpg" alt="Me :D" class="rounded-full w-48" />
  </header>

  <main>
    <h2 class="text-2xl font-bold text-display">ls ~</h2>
    <ul>
      <li>
        <a href="/bpm/" class="hover:text-red-500 transition-colors">$ cd bpm/</a>
      </li>
      <li>
        <a href="/docs/" class="hover:text-red-500 transition-colors">$ cd docs/</a>
      </li>
    </ul>

    <h2 class="text-2xl font-bold text-display mt-12">Projects</h2>
    <ul class="divide-y">
      {projects.map(project => (
        <li class="py-8">
          <p class="text-xs uppercase tracking-wide font-medium">{project.released}</p>
          <p class="text-lg font-semibold text-display">
            {project.url ? (
              <a href={project.url} target="_blank" rel="noopener noreferrer" class="hover:text-red-500 transition-colors">
                {project.name} ↗︎
              </a>
            ) : (
              project.name
            )}
          </p>
          <p class="text-sm">{project.description}</p>
          <ul class="mt-4 flex flex-wrap gap-y-1 text-sm">
            {project.stack.map(tech => (
              <li class="after:content-['●'] after:px-2 after:text-red-500 after:text-xs last:after:content-none">{tech}</li>
            ))}
          </ul>
        </li>
      ))}
    </ul>
  </main>
</MainLayout>
